{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@db/*": [
        "./core/database/*"
      ],
      "@exceptions/*": [
        "./core/exceptions/*"
      ],
      "@permissions/*": [
        "./permissions/*"
      ],
      "@roles/*": [
        "./roles/*"
      ],
      "@users/*": [
        "./users/*"
      ],
      "@videos/*": [
        "./videos/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}